{
    "$schema": "https://www.enzymeml.org/schema/json/enzymemlSchema.json",
    "definitions": {

        "creator": {
            "type": "object",
            "properties": {
                "given_name": {
                    "type": "string",
                    "description": "Authors given name"
                },
                "family_name": {
                    "type": "string",
                    "description": "Authors family name"
                },
                "mail": {
                    "type": "string",
                    "description": "Authors e-mail address"
                }
            },
            "required": [
                "given_name", "family_name", "mail"
            ]
        },

        "vessel": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Conventional name of vessel"
                },
                "id_": {
                    "type": "string",
                    "description": "Internal Identifier used in other objects"
                },
                "size": {
                    "type": "float",
                    "description": "Value of vessel volume"
                },
                "unit": {
                    "type": "string",
                    "description": "Unit of vessel volume"
                }
            },
            "required": [
                "name", "id_", "size", "unit"
            ]
        },

        "protein": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Systematic name of the enzyme/protein"
                },
                "sequence": {
                    "type": "string",
                    "description": "Aminoacid sequence of the enzyme/protein"
                },
                "compartment": {
                    "type": "string",
                    "description": "Vessel identifier in which the experiment was executed"
                },
                "init_conc": {
                    "type": "float",
                    "minimum": 0.0,
                    "description": "Value of the proteins initial concentration"
                },
                "substanceunits": {
                    "type": "string",
                    "description": "Unit of the proteins initial concentration"
                },
                "ecnumber": {
                    "type": "string",
                    "description": "Enzyme commission numbers"
                },
                "uniprotid": {
                    "type": "string",
                    "description": "UniProt database identifier"
                }
            },
            "required": [
                "name", "sequence", "compartment", "init_conc", "substanceunits"
            ]
        },

        "reactant": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Systematic name of the reactant"
                },
                "compartment": {
                    "type": "string",
                    "description": "Vessel identifier in which the experiment was executed"
                },
                "init_conc": {
                    "type": "string",
                    "description": "Value of the reactants initial concentration"
                },
                "substanceunits": {
                    "type": "string",
                    "description": "Unit of the reactants initial concentration"
                },
                "constant": {
                    "type": "boolean",
                    "description": "Whether or not reactant concentration is constant over time",
                    "defaults": false
                },
                "smiles": {
                    "type": "string",
                    "description": "Simplified Molecular Input Line Entry Specification for chemical entities"
                },
                "inchi": {
                    "type": "string",
                    "description": "Internation chemical identifier"
                }
            },
            "required": [
                "name", "compartment", "init_conc", "substanceunits"
            ]
        },

        "reaction": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Systematic name of the reaction"
                },
                "temperature": {
                    "type": "float",
                    "description": "Temperature value of the reaction"
                },
                "tempunit": {
                    "type": "string",
                    "description": "Temperature unit of the reaction"
                },
                "ph": {
                    "type": "float",
                    "minimum": 0.0,
                    "maximum": 14.0,
                    "description": "pH value of the reaction"
                },
                "reversible": {
                    "type": "boolean",
                    "description": "Whether a reaction is reversible or irreversible"
                },
                "educts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/element"
                    },
                    "description": "Reaction educts optionally containing time course data"
                },
                "products": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/element"
                    },
                    "description": "Reaction products optionally containing time course data"
                },
                "modifiers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/element"
                    },
                    "description": "Reaction modifiers such as catalysts or buffer components"
                },
                "kineticmodel": {
                    "$ref": "#/definitions/kineticmodel"
                }

            },
            "required": [
                "name", 
                "temperature",
                "tempunit",
                "ph",
                "reversible",
                "educts",
                "products",
                "modifiers"
            ]
        },

        "kineticmodel": {
            "type": "object",
            "properties": {
                "equation": {
                    "type": "string",
                    "description": "Mathematical model describing the kinetics of given reaction"
                },
                "parameters": {
                    "type": "array",
                    "items": {

                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Name of estimated parameter"
                            },
                            "reactant": {
                                "type": "string",
                                "description": "Name of the reactant that has been modelled"
                            },
                            "value": {
                                "type": "float",
                                "description": "Value of the estimated parameter"
                            },
                            "unit": {
                                "type": "string",
                                "description": "Unit of the estimated parameter"
                            }
                        }
                    }
                }
            },
            "required": [
                "equation", "parameters"
            ]
        },

        "replicate": {
            "type": "object",
            "properties": {
                "replica": {
                    "type": "string",
                    "description": "Unique replicate identifier"
                },
                "reactant": {
                    "type": "string",
                    "description": "Name of reactant that has been measured"
                },
                "type_": {
                    "type": "string",
                    "enum": [
                        "conc", "abs", "calc"
                    ],
                    "description": "Type of data (concentration, absorption, calculated)"
                },
                "data_unit": {
                    "type": "string",
                    "description": "Unit of the measured data"
                },
                "time_unit": {
                    "type": "string",
                    "description": "Time unit of the measured data"
                },
                "init_conc": {
                    "type": "float",
                    "description": "Initial concentration that has been used in the experiment"
                },
                "data": {
                    "type": "array",
                    "items": {
                        "type": "float"
                    },
                    "description": "Array of measured data"
                },
                "time": {
                    "type": "array",
                    "items": {
                        "type": "float"
                    },
                    "description": "Time array of measured data"
                }
            }
        },

        "element": {
            "type": "object",
            "properties": {
                "species": {
                    "type": "string",
                    "description": "Name of the reaction element"
                },
                "stoich": {
                    "type": "float",
                    "minimum": 0.0,
                    "description": "Stoichiometrics coefficient of the reaction element"
                },
                "constant": {
                    "type": "boolean",
                    "description": "Whether a reactant is constant or not constant over the course of the experiment"
                },
                "replicates": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/replicate"
                    },
                    "defaults": [] 
                }
            },
            "required": [
                "species", "stoich", "constant"
            ]

        }
    },

    "properties": {
        
        "name": {
            "type": "string",
            "description": "Name of the EnzymeML document"
        },
        "doi": {
            "type": "string",
            "description": "Digital Object Identifier"
        },
        "pubmedID": {
            "type": "string",
            "description": "Identifier related to a pubMed entry"
        },
        "creator": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/creator"
            },
            "description": "Array containing all creator objects"
        },
        "vessel": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/vessel"
            },
            "description": "Array containing all vessel objects"
        },
        "protein": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/protein"
            },
            "description": "Array containing all protein objects"
        },
        "reactant": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/reactant"
            },
            "description": "Array containing all reactant objects"
        },
        "reaction": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/reaction"
            },
            "description": "Array containing all reaction objects"
        }


    }
}
